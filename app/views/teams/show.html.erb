<div class="row">
 <div class="col-12 text-center">
  <i class="fas fa-address-card fa-3x mt-4 mb-2"></i>
  <h2>チーム情報</h2>
  <% if @team.present? %>
    <table class="table table-bordered table-condensed">
     <tbody>
      <tr>
        <%= attachment_image_tag @team, :image, :fill, 150, 150, fallback: "no_image.jpg", size:'150x150' %>
      </tr>
      <tr>
        <th><label>チーム名</label></th>
        <td><%= @team.name %></td>
      </tr>
      <tr>
        <th><label>チーム紹介</label></th>
        <td><%= @team.introduction %></td>
      </tr>
      <tr>
        <th><label>活動人数</label></th>
        <td><%= @team.number %></td>
      </tr>
      <tr>
        <th><label>活動場所</label></th>
        <td><%= @team.address %></td>
      </tr>
      <tr>
        <th><label>活動ステータス</label></th>
        <td><%= (@team.status)? '活動中' : '休止中' %></td>
      </tr>
      <tr>
      <tr>
        <th><label>Vスポーツ</label></th>
        <td><%= @team.sport.name %></td>
      </tr>
      <tr>
        <th><label>いいね</label></th>
        <td>
          <%= render 'teams/favorite', team: team %>
        </td>
      </tr>
    </tbody>
  </table>
    <% if @team.user_id == current_user.id %>
      <%= link_to "編集する", edit_team_path, class: "btn btn-outline-info text-center"%>
    <% end %>
    <% else %>
      <i class="fas fa-exclamation fa-5x text-light text-center"></i>
      <p class="text-center">チーム情報がありません。</p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-comments fa-3x mt-4 mb-2"></i>
    <h2>コメント件数：<%= @team.comments.count %></h2>
    <table class="table-bordered table-condensed">
      <thead>
        <tr>
          <th>会員</th>
          <th>コメント</th>
          <th>コメント日時</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @team.comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to user_path(comment.user) do %>
              <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br><%= comment.user.handle_name %>
            <% end %>
          </td>
          <td>
            <%= comment.comment %>
          </td>
          <td>
            <%= comment.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>
            <% if comment.user == current_user %>
            <div class="comment-delete">
              <%= link_to "削除", team_comment_path(comment.team, comment), method: :delete %>
            </div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

    <div class="new-comment text-center mt-5">
    <%= form_with(model:[@team, @comment], local: true) do |f| %>
      <%= f.text_area :comment, placeholder: "コメントをここに", class:"form-control mb-4" %>
      <%= f.submit "送信する", class: "btn btn-outline-info" %>
    <% end %>
    </div>
