<i class="far fa-edit fa-2x"></i><h2>チーム情報編集</h2><br>
<form>
  <%= form_with model: @team, url: teams_path, local: true do |f| %>
  <fieldset class="form-group">
    <%= f.attachment_field :image %>
    <div class="form-group">
      <label>チーム名</label><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    <div class="form-group">
      <label>チーム紹介</label>
      <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>活動人数</label>
      <%= f.text_field :number, autofocus: true, autocomplete: "number", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>活動場所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>ステータス</label>
      <div>
      <%= f.select :status, [['活動中', 0 ],['休止中', 1 ]] %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "更新", class: 'btn btn-info' %>
    </div>
    <div class="actions">
      <% if @team.user == current_user %>
        <%= link_to '削除', teams_path(@team), method: :delete, class:'btn btn-danger' %>
      <% end %>
    </div>
  <% end %>
</form>