<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-users fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">チーム一覧</h2>
   <% if @teams.present? %>
    <table class = "table table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>画像</th>
          <th>チーム名</th>
          <th>チーム紹介</th>
          <th>活動人数</th>
          <th>活動場所</th>
          <th>ステータス</th>
          <th>いいね</th>
          <th>コメント</th>
          <th>Vスポーツ</th>
          <th>チーム設立者</th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
        <tr>
          <td>
            <%= attachment_image_tag team, :image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
          </td>
          <td>
            <%= link_to team_path(team.id) do %>
              <%= team.name %>
            <% end %>
          </td>
          <td>
            <%= team.introduction %>
          </td>
          <td>
            <%= team.number %>
          </td>
          <td>
            <%= team.address %>
          </td>
          <td>
            <%= (team.status)? '活動中' : '休止中' %>
          </td>
          <td>
            <%= render 'teams/favorite', team: team %>
          </td>
          <td>
            <%= team.comments.count %>
          </td>
          <td>
            <%= link_to sport_path(team.sport_id) do %>
              <%= team.sport.name %>
            <% end %>
          </td>
          <td>
            <%= link_to user_path(team.user) do %>
              <%= attachment_image_tag team.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br><%= team.user.handle_name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <% else %>
  <div class="col-12 text-center">
    <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
    <p class="mt-2 text-center">チームがありません。</p>
  </div>
  <% end %>
  <div class ="row">
    <div class ="col-12  col-offset-4 mt-5 text-center">
      <table class="table table-hover table-bordered table-condensed table-striped">
        <thead class="thead_sport">
          <tr>
            <th><%= link_to 'チーム検索', sports_path, class: 'nav-link text-light' %></th>
          </tr>
        </thead>
        <tbody>
          <% @sports.each do |sport| %>
            <tr>
             <td><%= link_to sport.name, teams_path(sport_id: sport.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

