<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-search fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">チーム一覧</h2>
    <%= search_form_for @q do |f| %>
      <%= f.search_field :name_or_address_or_introduction_cont, placeholder: "キーワード", class:"my-4" %>
      <%= f.collection_select :sport_name_eq, @sports, :name, :name, include_blank: ' ベンチャースポーツ ' %>
      <%= f.collection_select :prefecture_code_eq, JpPrefecture::Prefecture.all, :code, :name, include_blank: ' --都道府県-- ' %>
      <%= f.submit "検索" %>
    <% end %>
    <% if @teams.present? %>
      <% @teams.each do |team| %>
        <div class="card mb-2">
          <div class="row no-gutters">
            <div class="col-md-2 my-3">
              <%= link_to team_path(team) do %>
                <%= attachment_image_tag team, :image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br><%= team.name %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <%= link_to sport_path(team.sport_id) do %>
                  <%= team.sport.name %><br>
                <% end %>
                <% if team.status == "active" %>
                  <span class=""><%= team.status_i18n %></span>
                <% else %>
                  <span class="text-muted"><%= team.status_i18n %></span>
                <% end %>
                <i class="fas fa-users m-1"></i><%= team.number %>人
                <i class="far fa-comment m-1"></i><%= team.comments.count %>
                <span id="favorites_buttons_<%= team.id %>">
                  <%= render 'teams/favorite', team: team %>
                </span><i class="fas fa-map-pin m-1"></i><%= team.prefecture_name %><span class="ml-1"><%= team.address %></span><br>
                <%= team.introduction %>
              </div>
            </div>
            <div class="col-md-2 my-3">
              <%= link_to user_path(team.user) do %>
                <%= attachment_image_tag team.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"my-1" %><br>
                <i class="fas fa-user-lock m-1"></i><%= team.user.handle_name %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @teams %>
    <% else %>
      <div class="col-12 text-center">
        <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
        <p class="mt-2 text-center">チームがありません。</p>
      </div>
    <% end %>
  </div>
</div>
<div class ="row">
  <div class ="col-12  col-offset-4 mt-5 text-center">
    <table class="table table-hover table-bordered table-condensed table-striped">
      <thead class="thead_sport">
        <tr>
          <th><%= link_to 'ベンチャースポーツリスト', sports_path, class: 'nav-link text-light' %></th>
        </tr>
      </thead>
      <tbody>
        <% @sports.each do |sport| %>
          <tr>
           <td><%= link_to sport.name, sport_path(sport) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

