<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <i class="fas fa-bell fa-3x mt-4 mb-2"></i>
      <h2 class="text-center bg-gray">お知らせ</h2>
         <% if @infos.present? %>
          <% @infos.each do |info| %>
            <div class="card mb-2">
              <div class="row no-gutters">
                  <div class="col-md-2 my-3">
                    <%= info.title %>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <%= info.content %>
                    </div>
                  </div>
                  <div class="col-md-2 my-3">
                    <%= info.d %>
                  </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-12 text-center">
            <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
            <p class="mt-2 text-center">お知らせはありません。</p>
          </div>
        <% end %>
    </div>
  </div>
</div>
