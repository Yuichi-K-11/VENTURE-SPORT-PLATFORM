<div class="row">
  <div class="col-12 text-center">
    <i class="fab fa-vuejs fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">Vスポーツ一覧</h2>
  </div>
</div>
<div class="row">
  <% @sports.each do |sport| %>
    <div class="col-3 card shadow-ig my-2 px-2 text-center">
      <div><%= attachment_image_tag sport, :image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg" %></div>
      <div class="sport-sport"><%= link_to sport_path(sport) do %><%= attachment_image_tag sport, :image, format: 'jpeg', size: "150x150" %><% end %></div>
      <h5 class="sport-name"><%= link_to sport.name, sport_path(sport) %></h5>

      <%= link_to "詳細", sport_path(sport), class:'btn btn-outline-info my-4' %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-plus fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">Vスポーツ登録</h2>
    <%= form_with model: @sport, url: sports_path, local: true do |f| %>
      <div class="font-weight-bold mt-5">イメージ</div>
        <%= f.attachment_field :image %>
      <div class="font-weight-bold mt-5">Vスポーツ名</div>
        <%= f.text_field :name, class:'form-control' %>
      <div class="font-weight-bold mt-5">概要</div>
        <%= f.text_area :introduction, class:'form-control' %>
      <div class="form_action text-center">
        <%= f.submit "登録", class:'btn btn-outline-info mt-3' %>
      </div>
    <% end %>
  </div>
</div>