<!--URL:/admin/sports-->

<!--↓新規登録↓-->
    <h2>Vスポーツ一覧・追加</h2>
    <%= form_with model: @sport, url: sports_path, local: true do |f| %>
        <div class="form_input">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <!--↓ラジオボタン↓-->
        <div>
          <%= f.radio_button :is_active, :true, :checked => true %>
          <%= f.label :is_active, "有効", :value => "true"  %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "無効", :value => "false" %>
        </div>
        <div class="form_action row">
          <%= f.submit "登録する", class:'btn btn-outline-info mb-5' %>
        </div>
    <% end %>

    <% if @sport.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @sport.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

<!--↓index↓-->
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.name %></td>
        <!--↓三項演算子という、単純なif文を一行で表す書き方、view上でtrue = 有効を意味している記述↓-->
        <td><%= (sport.is_active) ? '有効' : '無効' %></td>
        <td><%= link_to "編集する", edit_sport_path(sport.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
