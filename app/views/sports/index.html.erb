<%= render 'layouts/error_messages', model: @sport %>
<div class="row">
  <div class="col-12 text-center">
    <i class="fab fa-vuejs fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">Vスポーツ一覧</h2>
  </div>
</div>
<% if @sports.present? %>
<div class="row">
  <% @sports.each do |sport| %>
    <div class="col-3 card shadow-ig pt-3 px-2 text-center">
      <div class="sport-sport"><%= link_to sport_path(sport) do %><%= attachment_image_tag sport, :image, size: "150x150", fallback: "no_image.jpg" %><% end %></div>
      <h5 class="sport-name my-4"><%= link_to sport.name, sport_path(sport) %></h5>
    </div>
  <% end %>
</div>
<% else %>
  <div class="col-12 text-center">
    <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
    <p class="mt-2 text-center">Vスポーツがありません。</p>
  </div>
  <% end %>
<% if user_signed_in? %>
<div class="row mt-5">
  <div class="col-12 text-center">
    <i class="fas fa-plus fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">Vスポーツ登録</h2>
    <%= form_with model: @sport, url: sports_path, local: true do |f| %>
      <div class="font-weight-bold mt-5">イメージ</div>
        <%= f.attachment_field :image %>
      <div class="font-weight-bold mt-5">Vスポーツ名</div>
        <%= f.text_field :name, class:'form-control' %>
      <div class="font-weight-bold mt-5">概要</div>
        <%= f.text_area :introduction, class:'form-control' %>
      <div class="form_action text-center mt-4">
        <%= f.submit "登録", class:'btn btn-outline-info' %>
      </div>
    <% end %>
  </div>
</div>
<% end %>