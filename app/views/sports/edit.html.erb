<!--URL:/admin/sports/:id/edit-->

<h2>ジャンル編集</h2>
<%= form_with model: @sport, url: sport_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% if @sport.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @sport.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--↓ラジオボタン↓-->
  <div>
    <%= f.radio_button :is_active, :true, :checked => true %>
    <%= f.label :is_active, "有効", :value => "true"  %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効", :value => "false" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>