<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-user-friends fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">会員一覧</h2>
    <%= search_form_for @q do |f| %>
      <%= f.search_field :handle_name_cont, placeholder: "キーワード", class:"my-4" %>
      <%= f.submit "検索" %>
    <% end %>
    <% if @users.present? %>
      <% @users.each do |user| %>
        <%= render 'users/user_list', user: user %>
      <% end %>
      <%= paginate @users %>
    <% else %>
      <div class="col-12 text-center">
        <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
        <p class="mt-2 text-center">他に会員がいません。</p>
      </div>
    <% end %>
    <%= link_to "マイページ", user_path(current_user), class: 'btn btn-outline-info mt-3' %>
  </div>
</div>