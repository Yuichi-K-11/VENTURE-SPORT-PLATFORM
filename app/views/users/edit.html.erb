<div class="row">
 <div class="col-md-12 text-center">
  <i class="far fa-edit fa-3x mt-4 mb-2"></i>
   <h2><%= @user.handle_name %>さんの登録情報編集</h2>
    <%= form_with model: @user, local: true do |f| %>
      <div>
      <label for="inputImage mt-5">プロフィール画像</label><br>
        <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, fallback: "no_image.jpg"%><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <div class="form-group mt-5">
      <label>ハンドルネーム</label><br>
      <%= f.text_field :handle_name, autofocus: true, autocomplete: "handle_name", class:"form-control" %>
      </div>
      <label>自己紹介</label><br>
      <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>名前</label><br>
        <label>(姓)</label>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control"%>
        <label>(名)</label>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>フリガナ</label><br>
        <label>(セイ)</label>
        <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
        <label>(メイ)</label>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>郵便番号（ハイフン無し）</label>
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>住所</label>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, id: "user_prefecture_code", class: 'form-control' %>
        <%= f.text_field :address_city, autofocus: true, autocomplete: "address", class:"form-control" %>
        <%= f.text_field :address_street, autofocus: true, autocomplete: "address", class:"form-control" %>
        <%= f.text_field :address_building, autofocus: true, autocomplete: "address", class:"form-control" %>
      </div>
      <div class="form-group mt-5">
        <label>電話番号</label>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "telephone_number", class:"form-control" %>
      </div>
      <div class="actions mt-5">
        <%= f.submit "保存", class:'btn btn-outline-info' %>
      </div>
      <div class="actions mt-5">
        <%= link_to '退会', unsubscribe_user_path(current_user.id), class:'btn btn-outline-info' %>
      </div>
    <% end %>
   </div>
  </div>
</div>