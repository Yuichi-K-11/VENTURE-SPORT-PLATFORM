<i class="far fa-edit fa-2x"></i><h2>登録情報編集</h2><br>
<form>
  <%= form_with model: @user, url: users_path, local: true do |f| %>
  <fieldset class="form-group">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <label for="inputImage">ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>  
    <div class="form-group">
      <label>ハンドルネーム</label><br>
      <%= f.text_field :handle_name, autofocus: true, autocomplete: "handle_name", class:"form-control" %>
      </div>
    <div class="form-group">
      <label>名前</label><br>
      <label>(姓)</label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control"%>
      <label>(名)</label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>フリガナ</label><br>
      <label>(セイ)</label>
      <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
      <label>(メイ)</label>
      <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>郵便番号（ハイフン無し）</label>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>住所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
    <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "telephone_number", class:"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "編集内容を保存する", class:'btn btn-outline-info' %>
      <%= link_to '退会する', user_path, class:'btn btn-danger' %>
    </div>
  <% end %>
</form>